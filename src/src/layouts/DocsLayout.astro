---
import Layout from './Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title?: string;
  description?: string;
  lang?: string;
}

const { 
  title = "Документация - PortoGate", 
  description = "Подробные инструкции по настройке и использованию PortoGate",
  lang = "ru"
} = Astro.props;
---

<Layout title={title} description={description} lang={lang}>
  <Navigation currentPath={Astro.url.pathname} />
    <main class="pt-16 min-h-screen bg-slate-950">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Documentation content styling -->
      <div class="prose prose-slate prose-invert max-w-none
        prose-headings:text-slate-100
        prose-h1:text-4xl prose-h1:font-bold prose-h1:mb-8 prose-h1:bg-gradient-to-r prose-h1:from-blue-400 prose-h1:to-purple-400 prose-h1:bg-clip-text prose-h1:text-transparent
        prose-h2:text-2xl prose-h2:font-semibold prose-h2:text-blue-400 prose-h2:mt-12 prose-h2:mb-6 prose-h2:border-b prose-h2:border-slate-700 prose-h2:pb-2
        prose-h3:text-xl prose-h3:font-medium prose-h3:text-slate-200 prose-h3:mt-8 prose-h3:mb-4
        prose-h4:text-lg prose-h4:font-medium prose-h4:text-slate-200 prose-h4:mt-6 prose-h4:mb-3
        prose-p:text-slate-300 prose-p:leading-relaxed prose-p:mb-4
        prose-strong:text-slate-100 prose-strong:font-semibold
        prose-a:text-blue-400 prose-a:no-underline hover:prose-a:text-blue-300 hover:prose-a:underline
        prose-ul:text-slate-300 prose-ul:space-y-2
        prose-ol:text-slate-300 prose-ol:space-y-2
        prose-li:marker:text-blue-400
        prose-code:bg-slate-800 prose-code:text-blue-300 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-sm
        prose-pre:bg-slate-800 prose-pre:border prose-pre:border-slate-700 prose-pre:rounded-lg
        prose-blockquote:border-l-4 prose-blockquote:border-blue-500 prose-blockquote:bg-slate-800/50 prose-blockquote:p-4 prose-blockquote:rounded-r-lg prose-blockquote:text-slate-300
        prose-hr:border-slate-700 prose-hr:my-8
        prose-table:text-slate-300
        prose-th:bg-slate-800 prose-th:text-slate-100
        prose-td:border-slate-700
      " id="docs-content">
        <slot />
      </div>
        
        <!-- Navigation buttons -->
        <div class="mt-16 pt-8 border-t border-slate-700">
          <div class="flex justify-between items-center">
            <a 
              href={`/${lang}/docs/`}
              class="inline-flex items-center px-4 py-2 bg-slate-800 hover:bg-slate-700 text-slate-300 hover:text-slate-100 rounded-lg transition-colors duration-300"
            >
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
              {lang === 'ru' ? 'Назад к документации' : 'Back to documentation'}
            </a>
            
            <div class="text-sm text-slate-500">
              {lang === 'ru' ? 'Нужна помощь?' : 'Need help?'}
              <a 
                href="https://t.me/portogate_support" 
                target="_blank"
                rel="noopener noreferrer"
                class="text-blue-400 hover:text-blue-300 ml-1"
              >
                {lang === 'ru' ? 'Поддержка' : 'Support'}
              </a>
            </div>
          </div>
        </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
/* Обеспечиваем правильное форматирование для всего контента документации */
#docs-content {
  /* Базовые стили для текста */
  color: rgb(203 213 225); /* text-slate-300 */
  line-height: 1.75;
}

/* Заголовки */
#docs-content h1 {
  font-size: 2.25rem; /* text-4xl */
  font-weight: 700; /* font-bold */
  margin-bottom: 2rem; /* mb-8 */
  background: linear-gradient(to right, rgb(96 165 250), rgb(168 85 247));
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
}

#docs-content h2 {
  font-size: 1.5rem; /* text-2xl */
  font-weight: 600; /* font-semibold */
  color: rgb(96 165 250); /* text-blue-400 */
  margin-top: 3rem; /* mt-12 */
  margin-bottom: 1.5rem; /* mb-6 */
  border-bottom: 1px solid rgb(51 65 85); /* border-slate-700 */
  padding-bottom: 0.5rem; /* pb-2 */
}

#docs-content h3 {
  font-size: 1.25rem; /* text-xl */
  font-weight: 500; /* font-medium */
  color: rgb(226 232 240); /* text-slate-200 */
  margin-top: 2rem; /* mt-8 */
  margin-bottom: 1rem; /* mb-4 */
}

#docs-content h4 {
  font-size: 1.125rem; /* text-lg */
  font-weight: 500; /* font-medium */
  color: rgb(226 232 240); /* text-slate-200 */
  margin-top: 1.5rem; /* mt-6 */
  margin-bottom: 0.75rem; /* mb-3 */
}

/* Параграфы */
#docs-content p {
  color: rgb(203 213 225); /* text-slate-300 */
  line-height: 1.75; /* leading-relaxed */
  margin-bottom: 1rem; /* mb-4 */
}

/* Списки */
#docs-content ul,
#docs-content ol {
  color: rgb(203 213 225); /* text-slate-300 */
  margin-bottom: 1rem;
  padding-left: 1.5rem;
}

#docs-content ul {
  list-style-type: disc;
}

#docs-content ol {
  list-style-type: decimal;
}

#docs-content li {
  margin-bottom: 0.5rem;
}

#docs-content li::marker {
  color: rgb(96 165 250); /* text-blue-400 */
}

/* Ссылки */
#docs-content a {
  color: rgb(96 165 250); /* text-blue-400 */
  text-decoration: none;
}

#docs-content a:hover {
  color: rgb(147 197 253); /* text-blue-300 */
  text-decoration: underline;
}

/* Выделенный текст */
#docs-content strong {
  color: rgb(241 245 249); /* text-slate-100 */
  font-weight: 600;
}

/* Код */
#docs-content code {
  background-color: rgb(30 41 59); /* bg-slate-800 */
  color: rgb(147 197 253); /* text-blue-300 */
  padding: 0.25rem 0.5rem;
  border-radius: 0.25rem;
  font-size: 0.875rem;
}

/* Блоки кода */
#docs-content pre {
  background-color: rgb(30 41 59); /* bg-slate-800 */
  border: 1px solid rgb(51 65 85); /* border-slate-700 */
  border-radius: 0.5rem;
  padding: 1rem;
  overflow-x: auto;
  margin: 1rem 0;
}

/* Горизонтальные разделители */
#docs-content hr {
  border-color: rgb(51 65 85); /* border-slate-700 */
  margin: 2rem 0;
}

/* Цитаты */
#docs-content blockquote {
  border-left: 4px solid rgb(59 130 246); /* border-blue-500 */
  background-color: rgba(30 41 59, 0.5); /* bg-slate-800/50 */
  padding: 1rem;
  border-radius: 0 0.5rem 0.5rem 0;
  color: rgb(203 213 225); /* text-slate-300 */
  margin: 1rem 0;
}

/* Таблицы */
#docs-content table {
  color: rgb(203 213 225); /* text-slate-300 */
  width: 100%;
  border-collapse: collapse;
  margin: 1rem 0;
}

#docs-content th {
  background-color: rgb(30 41 59); /* bg-slate-800 */
  color: rgb(241 245 249); /* text-slate-100 */
  padding: 0.75rem;
  border: 1px solid rgb(51 65 85);
}

#docs-content td {
  padding: 0.75rem;
  border: 1px solid rgb(51 65 85); /* border-slate-700 */
}
</style>
