---
import { getLangFromUrl, useTranslations } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-slate-900 border-t border-slate-800">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Logo and Description -->
      <div class="md:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-sm">PG</span>
          </div>
          <span class="text-xl font-bold text-slate-100">PortoGate</span>
        </div>
        <p class="text-slate-400 mb-6 max-w-md">
          {lang === 'ru' 
            ? 'Персональный шлюз для безопасного подключения к интернету. Современные решения для стабильного доступа в сеть.'
            : 'Personal gateway for secure internet connection. Modern solutions for stable network access.'
          }
        </p>
        <div class="flex space-x-4">
          <a 
            href="https://t.me/portogate_bot" 
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center w-10 h-10 bg-slate-800 hover:bg-blue-600 rounded-lg transition-colors duration-300"
            aria-label="Telegram"
          >
            <svg class="w-5 h-5 text-slate-300 hover:text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
            </svg>
          </a>
          <a 
            href="https://github.com/your-repo" 
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center w-10 h-10 bg-slate-800 hover:bg-slate-700 rounded-lg transition-colors duration-300"
            aria-label="GitHub"
          >
            <svg class="w-5 h-5 text-slate-300 hover:text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold text-slate-100 mb-4">
          {lang === 'ru' ? 'Быстрые ссылки' : 'Quick Links'}
        </h3>
        <ul class="space-y-3">
          <li>
            <a href={`/${lang}/`} class="text-slate-400 hover:text-slate-200 transition-colors duration-300">
              {t('nav.home')}
            </a>
          </li>
          <li>
            <a href={`/${lang}/docs/`} class="text-slate-400 hover:text-slate-200 transition-colors duration-300">
              {t('nav.docs')}
            </a>
          </li>
          <li>
            <a href={`/${lang}/#pricing`} class="text-slate-400 hover:text-slate-200 transition-colors duration-300">
              {t('nav.pricing')}
            </a>
          </li>
          <li>
            <a href={`/${lang}/#faq`} class="text-slate-400 hover:text-slate-200 transition-colors duration-300">
              {t('nav.faq')}
            </a>
          </li>
        </ul>
      </div>

      <!-- Support -->
      <div>
        <h3 class="text-lg font-semibold text-slate-100 mb-4">
          {lang === 'ru' ? 'Поддержка' : 'Support'}
        </h3>
        <ul class="space-y-3">
          <li>
            <a 
              href="https://t.me/your_support_bot" 
              target="_blank"
              rel="noopener noreferrer"
              class="text-slate-400 hover:text-slate-200 transition-colors duration-300"
            >
              {lang === 'ru' ? 'Техподдержка' : 'Technical Support'}
            </a>
          </li>
          <li>
            <a href={`/${lang}/privacy/`} class="text-slate-400 hover:text-slate-200 transition-colors duration-300">
              {t('footer.privacy')}
            </a>
          </li>
          <li>
            <span class="text-slate-400">
              {lang === 'ru' ? 'Поддержка 24/7' : '24/7 Support'}
            </span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Border -->
    <div class="border-t border-slate-800 mt-12 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-slate-400 text-sm">
          © 2025 PortoGate. {lang === 'ru' ? 'Все права защищены.' : 'All rights reserved.'}
        </p>
        <div class="flex items-center space-x-4">
          <span class="text-slate-500 text-sm">
            {lang === 'ru' ? 'Сделано с' : 'Made with'}
          </span>
          <span class="text-red-500">♥</span>
          <span class="text-slate-500 text-sm">
            {lang === 'ru' ? 'для безопасности' : 'for security'}
          </span>
        </div>
      </div>
    </div>
  </div>
</footer>
